<div class="container mb-2">
  <div class="row justify-content-center">
    <div class="col-md-6 col-sm-12 bg-white card">

      <img src="assets/img/burger.gif" alt="" class="card-img-top">
      <div class="card-body">
        <h1 class="card-title text-center">
          Devour-a-Burger
        </h1>
      </div>

    </div>
  </div>
</div>

<div class="container">
  <div class="row mb-2">
    <div class="col-md-5 col-sm-12 bg-white text-dark card">
      <div class="card-body">
        <h3 class="card-title text-center">Devour a Burger!</h3>

        <ul class="list-group">
          {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
        </ul>
      </div>

    </div>
    <div class="col-md-5 ml-auto col-ms-12 bg-white text-dark card">
      <div class="card-body">
        <h3 class="card-title text-center">Devoured Burgers!</h3>

        {{burgers.name}}

        <ul class="list-group">
          {{#each burgers}} {{#unless devoured}}
          <li class="list-group-item">
            {{burger_name}}
          </li>
          {{/unless}} {{/each}}
        </ul>
      </div>

    </div>
  </div>


  <div class="row justify-content-center mb-4">
    <div class="col-sm-10 card bg-white">
      <div class="card-body">
        <h3 class="card-title text-center">Add a Burger</h3>

        <form class="create-form">

          <div class="form-group">
            <label for="burger">Burger Name:</label>
            <input type="text" id="burger" name="name" class="form-control">
          </div>

          <button class="btn btn-danger btn-sm" type="submit ">Add Burger</button>
        </form>
      </div>

    </div>
  </div>

</div>